<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryLight"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_watchlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.android.moviecatalog.Activities.WatchlistActivity">

        </android.support.v7.widget.RecyclerView>
    </ScrollView>

    <TextView
        android:id="@+id/tv_watchlist_empty_state"
        style="@style/emptyStateTvStyle"
        android:text="@string/watchlist_empty_state_text" />
</FrameLayout>
